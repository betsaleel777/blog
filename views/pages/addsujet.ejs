<%# formulaire d'ajout d'un nouveau sujets sur le blog %>
<% include header %>
<form  action="/addsujets" method="post" class="ui form">
  <input hidden type="text" name="user" value="<%= locals.user %>">
  <div class="field">
   <label for="message">Titre:</label>
   <input type="text" name="titre" value="">
 </div>
 <div class="field">
  <label for="message">Sous-titre:</label>
  <input type="text" name="sous_titre" value="">
</div>
 <div class="field">
  <label for="message">Message:</label>
  <textarea name="contenu"></textarea>
</div>
<button type="submit" class="ui yellow labeled submit icon button">
  <i class="icon send"></i>envoyer
</button>
</form>
<% include footer %>
